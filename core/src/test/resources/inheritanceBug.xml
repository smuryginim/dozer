<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<configuration>
		<stop-on-errors>true</stop-on-errors>
		<date-format>dd/MM/yyyy HH:mm</date-format>
		<wildcard>true</wildcard>
	</configuration>
	 
	 <mapping>
		<class-a>org.dozer.vo.inheritance.cc.X</class-a>
		<class-b>org.dozer.vo.inheritance.cc.A</class-b>
		<field custom-converter="org.dozer.vo.inheritance.cc.InheritanceBugConverter">
			<a>test</a>
			<b>test</b>
		</field>
	</mapping>
	
	<mapping>
		<class-a>org.dozer.vo.inheritance.cc.Y</class-a>
		<class-b>org.dozer.vo.inheritance.cc.B</class-b>
	</mapping>
	
	<mapping>
		<class-a>org.dozer.vo.inheritance.cc.Z</class-a>
		<class-b>org.dozer.vo.inheritance.cc.C</class-b>
	</mapping>

</mappings>
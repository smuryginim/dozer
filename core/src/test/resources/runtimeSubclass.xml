<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

  <!-- Mapping between User and UserPrime -->
	<mapping>
		<class-a>org.dozer.vo.runtimesubclass.User</class-a>
		<class-b>org.dozer.vo.runtimesubclass.UserPrime</class-b>
    <field>
      <a>userGroup</a>
      <b>userGroup</b>
      <a-hint>org.dozer.vo.runtimesubclass.UserGroup,org.dozer.vo.runtimesubclass.SpecialUserGroup</a-hint>
      <b-hint>org.dozer.vo.runtimesubclass.UserGroupPrime,org.dozer.vo.runtimesubclass.SpecialUserGroupPrime</b-hint>
    </field>
  </mapping>

    <!-- Mapping between basic UserGroup and UserGroupPrime -->
	<mapping>
		<class-a>org.dozer.vo.runtimesubclass.UserGroup</class-a>
		<class-b>org.dozer.vo.runtimesubclass.UserGroupPrime</class-b>
	</mapping>

    <!-- Mapping between specialized SpecialUserGroup and SpecialUserGroupPrime -->
	<mapping>
		<class-a>org.dozer.vo.runtimesubclass.SpecialUserGroup</class-a>
		<class-b>org.dozer.vo.runtimesubclass.SpecialUserGroupPrime</class-b>
	</mapping>

</mappings>
